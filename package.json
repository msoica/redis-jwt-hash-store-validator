{
  "name": "redis-jwt-hash-store-validator",
  "version": "1.0.0",
  "description": "A Redis-based JWT token store for managing and validating JWT tokens with blacklisting capabilities",
  "main": "src/index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest --detectOpenHandles",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "redis",
    "jwt",
    "token",
    "authentication",
    "validation",
    "blacklist",
    "security",
    "session",
    "store"
  ],
  "author": {
    "name": "Mihai Soica",
    "email": "mihai.a.soica@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msoica/redis-jwt-hash-store-validator.git"
  },
  "bugs": {
    "url": "https://github.com/msoica/redis-jwt-hash-store-validator/issues"
  },
  "homepage": "https://github.com/msoica/redis-jwt-hash-store-validator#readme",
  "dependencies": {
    "crypto": "^1.0.1",
    "jsonwebtoken": "^9.0.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.0.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "index.js",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 5000,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
